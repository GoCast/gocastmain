<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <SurfaceView
        android:id="@+id/localView" 
        android:layout_width="176dip"
        android:layout_height="144dip"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="5dip" />

    <SurfaceView
        android:id="@+id/remoteView0" 
        android:layout_width="176dip"
        android:layout_height="144dip"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@+id/localView" />

    <SurfaceView
        android:id="@+id/remoteView1"
        android:layout_width="176dip"
        android:layout_height="144dip"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@+id/remoteView0" />
    
    <TextView
        android:id="@+id/localViewLabel"
        android:layout_width="176dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_below="@+id/localView"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/localViewName" />

    <TextView
        android:id="@+id/remoteViewLabel0"
        android:layout_width="176dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_below="@+id/remoteView0"
        android:layout_toRightOf="@+id/localViewLabel"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/localViewName" />
    
    <TextView
        android:id="@+id/remoteViewLabel1"
        android:layout_width="176dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_below="@+id/remoteView1"
        android:layout_toRightOf="@+id/remoteViewLabel0"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/localViewName" />
                
</RelativeLayout>